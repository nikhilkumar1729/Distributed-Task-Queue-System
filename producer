package main

import (
    "context"
    "encoding/json"
    "github.com/redis/go-redis/v9"
    "log"
)

var ctx = context.Background()

func main() {
    rdb := redis.NewClient(&redis.Options{
        Addr: "localhost:6379",
    })

    task := Task{
        ID:      "1",
        Type:    "email",
        Payload: "Send welcome email",
    }

    data, err := json.Marshal(task)
    if err != nil {
        log.Fatal(err)
    }

    err = rdb.LPush(ctx, "task_queue", data).Err()
    if err != nil {
        log.Fatal(err)
    }

    log.Println("Task pushed successfully")
}
